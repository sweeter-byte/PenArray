# ============================================
# BiZhen Environment Configuration
# Copy this file to .env and fill in the values
# ============================================

# --- DeepSeek API Configuration ---
# REQUIRED: Your DeepSeek API key
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Optional: API base URL (default: https://api.deepseek.com)
DEEPSEEK_API_BASE=https://api.deepseek.com

# Model names (defaults shown)
DEEPSEEK_CHAT_MODEL=deepseek-chat
DEEPSEEK_REASONER_MODEL=deepseek-reasoner

# --- Database Configuration ---
# PostgreSQL connection (used by docker-compose)
DB_URL=postgresql://bizhen_user:bizhen_pass@postgres:5432/bizhen

# --- Redis Configuration ---
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# --- ChromaDB Configuration ---
CHROMA_HOST=chroma
CHROMA_PORT=8000

# --- Security ---
# Secret key for JWT token signing (generate a strong random string)
SECRET_KEY=your_super_secret_key_change_in_production

# Token expiration in hours
ACCESS_TOKEN_EXPIRE_HOURS=24
